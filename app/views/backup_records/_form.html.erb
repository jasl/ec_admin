<div class="container-fluid">
  <div class="row-fluid">
    <div class="span8">
      <%= form_for(@backup_record, :html => {:class => 'form-horizontal'}) do |f| %>
        <fieldset>
            <legend>修改记录</legend>
          <div class="row row-grid">
            <div class="span6 offset1">
              <%= print_error_messages @backup_record %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :name, :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :name, :class => 'input-large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :note, :class => 'control-label' %>
            <div class="controls">
              <%= f.text_area :note, :rows => 5, :class => 'input-large' %>
            </div>
          </div>
          <div class="form-actions">
            <%= f.submit :class => 'btn btn-primary' %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>