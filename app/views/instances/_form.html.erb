<div class="container-fluid">
  <div class="row-fluid">
    <div class="span8">
      <%= form_for(@instance, :html => {:class => 'form-horizontal'}) do |f| %>
        <fieldset>
          <legend>新建ECStore实例</legend>
          <div class="row row-grid">
            <div class="span6 offset1">
              <%= print_error_messages @instance %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :name, :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :name, :class => 'input-large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :url, :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :url, :class => 'input-large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :db_host, :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :db_host, :class => 'input-large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :db_port, :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :db_port, :class => 'input-large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :db_name, :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :db_name, :class => 'input-large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :db_user, :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :db_user, :class => 'input-large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :db_passwd, :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :db_passwd, :class => 'input-large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :note, :class => 'control-label' %>
            <div class="controls">
              <%= f.text_area :note, :rows => 5, :class => 'input-large' %>
            </div>
          </div>
          <div class="form-actions">
            <%= f.submit :class => 'btn btn-primary' %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
