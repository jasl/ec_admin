<div class="container-fluid">
  <div class="row-fluid">
    <div class="span8">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
        <fieldset>
          <legend>注册</legend>
          <div class="row row-grid">
            <div class="span6 offset1">
              <%= print_error_messages resource %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :email, t(:email), :class => 'control-label' %>
            <div class="controls">
              <%= f.email_field :email, :class => 'input-large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :name, t('user_name'), :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :name, :class => 'input-large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :password, t(:password), :class => 'control-label' %>
            <div class="controls">
              <%= f.password_field :password, :class => 'input-large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :password_confirmation, t(:password_confirmation), :class => 'control-label' %>
            <div class="controls">
              <%= f.password_field :password_confirmation, :class => 'input-large' %>
            </div>
          </div>
          <div class="form-actions">
            <%= f.submit '注册', :class => 'btn btn-primary' %>
          </div>
        </fieldset>
      <% end %>
    </div>

    <div class="span4">
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
          <li class="nav-header">
            其他选项
          </li>
          <%= render :partial => "devise/links" %>
        </ul>
      </div>
    </div>
  </div>
</div>
